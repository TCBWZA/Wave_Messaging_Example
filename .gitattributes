# Auto detect text files and normalize line endings to LF
* text=auto

# C# files
*.cs text eol=lf
*.csproj text eol=lf
*.sln text eol=lf

# JSON files
*.json text eol=lf
appsettings*.json text eol=lf merge=union

# Configuration files
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.config text eol=lf

# Markdown
*.md text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# PowerShell scripts
*.ps1 text eol=lf
*.psm1 text eol=lf

# Batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.dll binary
*.exe binary
*.pdb binary
*.so binary
*.dylib binary
*.nupkg binary
*.zip binary
*.gz binary
*.rar binary
*.7z binary

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Font files
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

